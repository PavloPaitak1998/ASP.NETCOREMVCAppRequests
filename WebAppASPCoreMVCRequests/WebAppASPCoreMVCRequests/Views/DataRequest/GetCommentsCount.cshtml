@model IEnumerable<(WebAppASPCoreMVCRequests.Models.Post Post,int Count)>
@{
    ViewData["Title"] = "GetCommentsCount";
}

<h2>Number of comments under the posts of a particular user</h2>

<div class="data comments-count">
    <div class="container data">
        @if (Model.Count() < 1)
        {
        <h3 class="my-text-warning">This user doesn't have any posts !</h3> 
        }
        else
        {
        <table class="table table-bordered text-center">
            <thead class="thead-dark">
                <tr>
                    <th>Post </th>
                    <th>ID</th>
                    <th>Title </th>
                    <th>Body </th>
                    <th>UserId </th>
                    <th>Likes  At</th>
                    <th>CreatedAt </th>
                    <th>Comments </th>
                </tr>
            </thead>
            @foreach (var t in Model)
             {
            <tr>
                <td><i class="fas fa-paste"></i></td>
                <td>@t.Post.Id</td>
                <td><a asp-controller="DataRequest" asp-action="PostInfo" asp-route-id="@t.Post.Id"> @t.Post.Title</a></td>
                <td>@t.Post.Body</td>
                <td>@t.Post.UserId </td>
                <td>@t.Post.Likes</td>
                <td>@DateTime.Parse(t.Post.CreatedAt).ToUniversalTime()</td>
                <td>@t.Count</td>
            </tr>
             }
        </table>
        }
    </div>
</div>