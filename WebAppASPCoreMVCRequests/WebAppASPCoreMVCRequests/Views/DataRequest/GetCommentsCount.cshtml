@model IEnumerable<(WebAppASPCoreMVCRequests.Models.Post Post,int Count)>
@{
    ViewData["Title"] = "GetCommentsCount";
}

<h2>Number of comments under the posts of a particular user</h2>

<div class="data">
    <div class="container data">
        <table class="table table-bordered text-center">
            <thead class="thead-dark">
                <tr>
                    <th class="">Post ID</th>
                    <th class="">Title </th>
                    <th class="">Body </th>
                    <th class="">UserId </th>
                    <th class="">Likes  At</th>
                    <th class="">CreatedAt </th>
                    <th class="">Comments </th>
                </tr>
            </thead>
            @foreach (var t in Model)
             {
                <tr>
                    <td>@t.Post.Id</td>
                    <td><a asp-controller="DataRequest" asp-action="PostInfo" asp-route-id="@t.Post.Id"> @t.Post.Title</a></td>
                    <td>@t.Post.Body</td>
                    <td>@t.Post.UserId </td>
                    <td>@t.Post.Likes</td>
                    <td>@t.Post.CreatedAt</td>
                    <td>@t.Count</td>
                </tr>
             }
        </table>
    </div>
</div>